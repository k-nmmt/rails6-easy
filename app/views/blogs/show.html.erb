<p><%= @blog.title %></p>
<p><%= @blog.body %></p>
<% if @blog.user_id == current_user.id %>
<%= link_to("編集", "/blogs/#{@blog.id}/edit") %>
<%= link_to("削除", "/blogs/#{@blog.id}", method: :delete, data: {confirm: "本当に削除しますか？"}) %>
<% end %>
<div>
  <%= form_with(model: [@blog, @comment], local: true) do |f| %>
    <div>
      <%= f.label :body, "コメント" %><br>
      <%= f.text_area :body %>
    </div>
    <%= f.submit %>
  <% end %>
</div>
<hr>
<div>
  <% @blog.comments.each do |comment| %>
    <p><%= comment.body %></p>
  <% end %>
</div>